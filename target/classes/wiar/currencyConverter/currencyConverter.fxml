<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="wiar.currencyConverter.CurrencyConverterController">
   <center>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Сумма:" AnchorPane.leftAnchor="40.0" AnchorPane.topAnchor="0.0" />
            <TextField fx:id="amountInput" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="0.0" />
            <Label text="Из:" AnchorPane.leftAnchor="60.0" AnchorPane.topAnchor="40.0" />
            <ComboBox fx:id="fromCurrencyDropdown" prefHeight="25.0" prefWidth="80.0" AnchorPane.leftAnchor="60.0" AnchorPane.topAnchor="60.0" />
            <Label text="В:" AnchorPane.rightAnchor="130.0" AnchorPane.topAnchor="40.0" />
            <ComboBox fx:id="toCurrencyDropdown" prefWidth="80.0" AnchorPane.rightAnchor="60.0" AnchorPane.topAnchor="60.0" />
         </children>
         <padding>
            <Insets top="40.0" />
         </padding>
      </AnchorPane>
   </center>
   <bottom>
      <HBox prefHeight="51.0" prefWidth="300.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#handleConversion" prefHeight="25.0" prefWidth="90.0" text="Посчитать">
               <HBox.margin>
                  <Insets left="105.0" right="105.0" />
               </HBox.margin></Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
